{
  "compilerOptions": {
    "target": "ES2022",                          
    "module": "Node16",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }, 
    "allowJs": true,                                            
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "outDir": "./dist",  
  },
  "exclude": [
    "node_modules"
  ]
}
